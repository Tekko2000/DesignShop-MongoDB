<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Design</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
        rel="stylesheet">
</head>

<nav class='shop-nav'>
    <a class='shop-logo' href="/">
        THE DESIGN SHOP
    </a>
    <a class='shop-add' href="/add">ADD NEW PRODUCT</a>
</nav>

<section class="grid">

    <%result.forEach(element=> { %>
        <figure>
            <img class='item-img' src=<%=`${element.product_pic_link}` %> alt="">
            <figcaption>

                <div class="brand">
                    <p class='brand-name'>
                        <%= `${element.product}` %>
                    </p>
                    <p class='item-price'>
                        <%= `${element.price}` %>
                    </p>
                </div>

                <div class="shopLink">
                    <p class='brand-title'>
                        <%= `${element.company}` %>
                    </p>
                    <a class="link-btn" href=<%=`/item/${element._id}`%> >
                        Details
                    </a>
                </div>

            </figcaption>
        </figure>

        <% }) %>
</section>



